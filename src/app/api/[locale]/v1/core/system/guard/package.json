{
  "name": "vibe-guard",
  "version": "1.0.0",
  "type": "module",
  "description": "Vibe Guard - Secure development environment with jail-based restrictions",
  "main": ".dist/index.js",
  "bin": {
    "vibe-guard": ".dist/index.js"
  },
  "files": [
    ".dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "build:tsc": "tsc index.ts --target es2020 --module es2020 --outDir .dist --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck --declaration false",
    "build:simple": "node build.js",
    "prepublishOnly": "npm run build",
    "dev": "npm run build && node .dist/index.js",
    "test": "node .dist/index.js --help"
  },
  "keywords": [
    "vibe",
    "guard",
    "security",
    "development",
    "jail",
    "sandbox",
    "cli",
    "terminal",
    "vscode"
  ],
  "author": "Vibe Team",
  "license": "MIT",
  "dependencies": {
    "commander": "12.0.0",
    "chalk": "5.3.0"
  },
  "devDependencies": {
    "@types/node": "24.1.0",
    "typescript": "5.9.2",
    "vite": "7.0.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vibe-dev/vibe-guard.git"
  },
  "bugs": {
    "url": "https://github.com/vibe-dev/vibe-guard/issues"
  },
  "homepage": "https://github.com/vibe-dev/vibe-guard#readme",
  "publishConfig": {
    "access": "public"
  }
}