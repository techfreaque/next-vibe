{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./.dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "release.config.ts", "build.config.ts"],
  "exclude": ["node_modules"]
}
