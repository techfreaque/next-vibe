{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./.dist",
    "rootDir": "./src",
    "paths": {
            "@/*": [
              "../../../../../../../*"
            ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "release.config.ts", "build.config.ts"],
  "exclude": ["node_modules"]
}
