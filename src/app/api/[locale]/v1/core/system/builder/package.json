{
  "name": "builder",
  "description": "An all-in-one build/bundle tool based on vite and rollup. Build anything from vanilla js to typescript react.",
  "version": "1.0.0",
  "main": ".dist/build.js",
  "types": ".dist/config.d.ts",
  "license": "MIT",
  "bin": {
    "builder": ".dist/build.js"
  },
  "private": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./.dist/build.js",
      "require": "./.dist/build.js"
    },
    "./src/*": "./src/*",
    "./.dist/*": "./.dist/*"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc -p tsconfig-build.json",
    "lint": "eslint --fix",
    "test": "NODE_ENV=test vitest run",
    "pub": "release-tool"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techfreaque/anywhere-widgets.git"
  },
  "bugs": {
    "url": "https://github.com/techfreaque/anywhere-widgets/issues"
  },
  "homepage": "https://github.com/techfreaque/anywhere-widgets#readme",
  "keywords": [
    "build",
    "bundle",
    "vite",
    "rollup",
    "react",
    "typescript",
    "tailwindcss"
  ],
  "author": "Marcus Brandstaetter <max@tfq.at>",
  "contributors": [
    {
      "name": "Marcus Brandstaetter - Anywhere Widgets",
      "email": "max@tfq.at"
    }
  ],
  "optionalDependencies": {
    "autoprefixer": "10.4.21",
    "postcss": "8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwindcss": "4.1.13"
  },
  "peerDependencies": {
    "typescript": "5.9.2",
    "vite": "7.1.6",
    "@tailwindcss/vite": "4.1.13",
    "@vitejs/plugin-react": "5.0.3",
    "vite-plugin-css-injected-by-js": "3.5.2",
    "vite-plugin-dts": "4.5.4"
  },
  "dependencies": {
    "ajv": "8.17.1",
    "archiver": "7.0.1",
    "commander": "14.0.1",
    "fs-extra": "11.3.2"
  },
  "devDependencies": {
    "@types/archiver": "6.0.3",
    "@types/autoprefixer": "10.2.4",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "lint": "workspace:*",
    "rollup": "4.52.0",
    "release-tool": "workspace:*",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "vite": "7.1.6",
    "@tailwindcss/vite": "4.1.13",
    "@vitejs/plugin-react": "5.0.3",
    "vite-plugin-css-injected-by-js": "3.5.2",
    "vite-plugin-dts": "4.5.4"
  },
  "resolutions": {
    "rollup": "4.52.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
