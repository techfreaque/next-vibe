{
  "name": "oxlint-plugin-i18n",
  "version": "1.0.0",
  "description": "Oxlint plugin for i18n literal string detection",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "oxlint",
    "plugin",
    "linter",
    "i18n",
    "internationalization",
    "literal-string"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.6.3",
    "oxlint": "^1.25.0"
  },
  "peerDependencies": {
    "oxlint": ">=1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}