{
  "name": "release-tool",
  "version": "1.0.0",
  "description": "A CLI tool for managing package releases with version bumping and publishing.",
  "license": "GPL-3.0-only",
  "bin": {
    "release-tool": ".dist/index.mjs"
  },
  "private": false,
  "type": "module",
  "files": [
    ".dist/**/*"
  ],
  "types": "./.dist/index.d.ts",
  "main": "./.dist/index.mjs",
  "module": "./.dist/index.mjs",
  "exports": {
    ".": {
      "types": "./.dist/index.d.ts",
      "import": "./.dist/index.mjs",
      "require": "./.dist/index.cjs"
    },
    "./types": {
      "types": "./.dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "builder build && chmod +x .dist/index.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "pub": "bun src/index.ts"
  },
  "dependencies": {
    "ajv": "8.17.1",
    "archiver": "7.0.1",
    "commander": "14.0.1",
    "inquirer": "12.9.6",
    "npm-check-updates": "18.3.0",
    "vite": "7.1.6"
  },
  "devDependencies": {
    "@types/archiver": "6.0.3",
    "@types/eslint": "9.6.1",
    "@types/fs-extra": "11.0.4",
    "@types/inquirer": "9.0.9",
    "@types/node": "24.5.2",
    "fs-extra": "11.3.2",
    "lint": "workspace:*",
    "builder": "workspace:*",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.0",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  }
}