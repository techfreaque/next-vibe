{
    "name": "next-vibe",
    "version": "1.0.0",
    "private": false,
    "files": [
        "dist/**/*"
    ],
    "description": "Next.js framework ideal for vibe coding. Build fully typed and validated apis that can be used with useApiForm, useApiQuery or useApiMutation.",
    "license": "GPL-3.0-only",
    "type": "module",
    "exports": {
        "./shared": {
            "types": "./dist/shared/index.d.ts",
            "import": "./dist/shared/index.mjs",
            "require": "./dist/shared/index.cjs"
        },
        "./testing": {
            "types": "./dist/testing/index.d.ts",
            "import": "./dist/testing/index.mjs",
            "require": "./dist/testing/index.cjs"
        },
        "./client": {
            "types": "./dist/client/index.d.ts",
            "import": "./dist/client/index.mjs",
            "require": "./dist/client/index.cjs"
        },
        "./server": {
            "types": "./dist/server/index.d.ts",
            "import": "./dist/server/index.mjs",
            "require": "./dist/server/index.cjs"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/techfreaque/next-vibe.git"
    },
    "bugs": {
        "url": "https://github.com/techfreaque/next-vibe/issues"
    },
    "homepage": "https://github.com/techfreaque/next-vibe#readme",
    "keywords": [
        "next",
        "portal",
        "react",
        "zustand",
        "tanstack",
        "react-query",
        "react-hook-form",
        "react-native"
    ],
    "author": "Marcus Brandstaetter",
    "contributors": [
        {
            "name": "Marcus Brandstaetter",
            "email": "max@tfq.at"
        }
    ],
    "dependencies": {},
    "peerDependencies": {},
    "NotYetOptionalDependencies": {
        "@react-native-async-storage/async-storage": "2.1.2"
    },
    "scripts": {
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:client": "vitest run --config vitest.client.config.ts",
        "test:client:watch": "vitest --config vitest.client.config.ts",
        "test:ai-form": "vitest run --config vitest.client.config.ts __tests__/client/hooks/ai-form",
        "test:ai-form:watch": "vitest --config vitest.client.config.ts __tests__/client/hooks/ai-form",
        "pub": "release-tool"
    },
    "devDependencies": {}
}