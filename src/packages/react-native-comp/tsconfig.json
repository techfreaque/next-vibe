{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "../../*"
      ],
      "next-vibe/*": [
        "../next-vibe/*"
      ],
      "next-vibe-ui/*": [
        "../next-vibe-ui/native/*"
      ],
      "@/packages/next-vibe-ui/web/ui/*": [
        "../next-vibe-ui/native/*"
      ]
    },
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.native.ts",
    "**/*.native.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "../../app/**/*.web.ts",
    "../../app/**/*.web.tsx"
  ]
}