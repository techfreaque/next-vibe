{
  "typescript.experimental.useTsgo": true,
  "cSpell.words": [
    "openeats",
    "sovendus",
    "vitest"
  ],
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  // Oxlint configuration
  "oxc.enable": true,
  "oxc.lint.run": "onSave",
  "oxc.configPath": ".tmp/.oxlintrc.json",
  // ESLint configuration (for i18n and custom AST rules)
  "eslint.enable": true,
  "eslint.format.enable": false,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Prettier configuration
  "prettier.enable": true,
  "prettier.requireConfig": true,
  // TypeScript configuration
  "typescript.validate.enable": true,
  "typescript.suggest.autoImports": true,
  "[typescript]": {
    "editor.defaultFormatter": "TypeScriptTeam.native-preview",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "files.eol": "\n",
  "files.exclude": {
    "postgres_data": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/*.tmp": true,
    "**/*.next": true
  },
  // "terminal.integrated.profiles.linux": {
  //   "Vibe Guard": {
  //     "path": "${workspaceFolder}/.vibe-guard-instance/.guard.sh"
  //   }
  // },
  "terminal.integrated.defaultProfile.linux": "Vibe Guard"
}