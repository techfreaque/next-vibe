{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Vibe Dev Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true
        },
        {
            "name": "Vibe Dev Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/packages/next-vibe/cli/bin/vibe.js",
            "args": [
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Vibe Fast Dev Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "next",
                "dev",
                "--turbo"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Vibe Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/packages/next-vibe/cli/bin/vibe.js",
            "args": [
                "test"
            ],
            "smartStep": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "test",
                "DEBUG_TESTS": "true"
            }
        }
    ],
    "compounds": [
        {
            "name": "Vibe Dev Server & Client",
            "configurations": [
                "Vibe Dev Server",
                "Vibe Dev Client"
            ]
        }
    ]
}