VIBE_CLI_USER_EMAIL=admin@example.com
# ensure this is a valid locale
VIBE_CLI_LOCALE=en-GLOBAL

NEXT_PUBLIC_DEBUG_PRODUCTION="false"
ENABLE_ANALYTICS="false"

# Database Configuration
# Local development database
DATABASE_URL="postgres://postgres:postgres@localhost:5432/postgres?schema=public"
# Example production database URL (replace with your actual database URL)
# DATABASE_URL="postgres://username:password@host:port/database?sslmode=require"

# SSL Configuration for Supabase
# When using Supabase, you may need to disable SSL certificate verification
# This is only recommended for development environments
# NODE_TLS_REJECT_UNAUTHORIZED=0

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_TEST_SERVER_URL="http://localhost:4000"
NODE_ENV="development" # Options: development, production, test
JWT_SECRET_KEY=your-secret-key-here-minimum-32-characters
CRON_SECRET=your-secret-key-here-minimum-32-characters


GOOGLE_SERVICE_ACCOUNT_EMAIL="your-google-service-account-email@gmail.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_CALENDAR_ID_DEFAULT="your-default-google-calendar-id"

# AI Configuration
OPENROUTER_API_KEY="your-openrouter-api-key"
# Optional: Uncensored.ai API key for UncensoredLM v1.1 model
# Get your API key from https://uncensored.ai
UNCENSORED_AI_API_KEY="your-uncensored-ai-api-key"
# Eden AI API key for speech-to-text and text-to-speech
# Get your API key from https://app.edenai.run/admin/account/settings
EDEN_AI_API_KEY="your-eden-ai-api-key"

FREEDOMGPT_API_KEY=your_api_key_here

GAB_AI_API_KEY=your_api_key_here

# Brave Search API key for web search
# Get your API key from https://brave.com/search/api/
BRAVE_SEARCH_API_KEY="your-brave-search-api-key"

# Scrappey API key for URL content fetching
# Get your API key from https://scrappey.com/
SCRAPPEY_API_KEY="your-scrappey-api-key"

# Payment Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# NOWPayments (Crypto Payments)
NOWPAYMENTS_API_KEY="your_nowpayments_api_key"
NOWPAYMENTS_IPN_SECRET="your_nowpayments_ipn_secret"
NOWPAYMENTS_API_URL="https://api-sandbox.nowpayments.io/v1"  # Use https://api.nowpayments.io/v1 for production

# Email Configuration

NEXT_PUBLIC_SUPPORT_EMAIL_DE="support-de@example.com"
NEXT_PUBLIC_SUPPORT_EMAIL_PL="support-pl@example.com"
NEXT_PUBLIC_SUPPORT_EMAIL_GLOBAL="support-global@example.com"

EMAIL_FROM_EMAIL="noreply@example.com"
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER="your_email_username"
EMAIL_PASS="your_email_password"

# Lead campaigns email configuration
LEADS_EMAIL_FROM_EMAIL="leads@example.com"
LEADS_EMAIL_HOST="smtp.example.com"
LEADS_EMAIL_PORT="587"
LEADS_EMAIL_SECURE="true"
LEADS_EMAIL_USER="leads_email_username"
LEADS_EMAIL_PASS="leads_email_password"

# SMS Configuration
SMS_PROVIDER="twilio" # Options: twilio, nexmo, etc.
SMS_FROM_NUMBER="your_phone_number"

# IMAP Configuration for Seeding
IMAP_SEED_ACCOUNT_NAME="Your IMAP Account Name"
IMAP_SEED_EMAIL="your-email@example.com"
IMAP_SEED_HOST="imap.example.com"
IMAP_SEED_USERNAME="your-email@example.com"
IMAP_SEED_PASSWORD="your-imap-password"
IMAP_SEED_PORT=993
IMAP_SEED_SECURE=false

# Analytics Configuration
NEXT_PUBLIC_GA_ID="your_google_analytics_id"

# Chat File Storage Configuration
# Server-side storage supports both filesystem and S3
# Incognito mode uses browser IndexedDB (client-side only, no server upload)

# Storage type: "filesystem" (default, for Docker/self-hosted) or "s3" (for cloud)
CHAT_STORAGE_TYPE=filesystem

# Filesystem Configuration (for Docker/self-hosted deployments)
# This path is inside the container, mapped to a volume in docker-compose
CHAT_STORAGE_PATH=./.tmp/next-vibe-uploads/chat

# S3 Configuration (when CHAT_STORAGE_TYPE="s3")
# S3_ENDPOINT="https://s3.amazonaws.com"  # Optional: for MinIO or custom S3-compatible storage
# S3_REGION="us-east-1"
# S3_BUCKET="chat-attachments"
# S3_ACCESS_KEY_ID="your-access-key-id"
# S3_SECRET_ACCESS_KEY="your-secret-access-key"
# Optional: Public URL base for direct file access (without presigned URLs)
# S3_PUBLIC_URL_BASE="https://cdn.example.com"
