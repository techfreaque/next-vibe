      "name": "Cursor"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techfreaque/next-vibe.git",
    "directory": "vibe-check"
  },
  "bin": {
    "v": ".dist/bin/vibe-runtime.js",
    "vibe": ".dist/bin/vibe-runtime.js"
  },
  "workspaces": [
    "src/app/api/*/system/guard",
    "src/app/api/*/system/launchpad",
    "src/app/api/*/system/release-tool"
  ],
  "files": [
    "check.config.ts",
    ".dist/**/*",
    "src/app/**/*",
    "src/config/**/*",
    "src/i18n/**/*"
  ],
  "type": "module",
  "main": "./.dist/bin/vibe-runtime.js",
  "exports": {
    ".": {
      "import": "./dist/bin/vibe-runtime.js",
      "default": "./dist/bin/vibe-runtime.js"
    },
    "./*": {
      "types": "./src/app/api/[locale]/*",
      "import": "./src/app/api/[locale]/*",
      "default": "./src/app/api/[locale]/*"
    }
  },
  "scripts": {
    "postinstall": "bun src/app/api/[locale]/system/unified-interface/cli/vibe-runtime.ts setup --force || echo 'Vibe setup failed - run manually if needed'",
    "vibe": "bun src/app/api/[locale]/system/unified-interface/cli/vibe-runtime.ts",
    "build": "bun run vibe builder",
    "check": "bun run vibe check",
    "lint": "echo redirecting to check && vibe check",
    "typecheck": "echo redirecting to check && vibe check",
    "mcp:test": "bunx @modelcontextprotocol/inspector -e PROJECT_ROOT=$PWD bun $PWD/src/app/api/[locale]/system/unified-interface/cli/vibe-runtime.ts mcp"
  },
  "dependencies": {
    "@inquirer/prompts": "8.1.0",
    "argon2": "0.44.0",
    "chalk": "5.6.2",
    "commander": "14.0.2",
    "date-fns": "4.1.0",
    "dotenv": "17.2.3",
    "eslint-plugin-i18next": "6.1.3",
    "eslint-plugin-react-compiler": "19.1.0-rc.2",
    "fs-extra": "^11.3.3",
    "glob": "13.0.0",
    "gradient-string": "3.0.0",
    "inquirer": "^13.1.0",
    "jose": "6.1.3",
    "jsonc-parser": "3.3.1",
    "server-only": "0.0.1",
    "simple-git": "^3.30.0",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@types/eslint-plugin-jsx-a11y": "6.10.1",
    "@types/gradient-string": "1.1.6",
    "@types/node": "25.0.3",
    "@types/react": "~19.2.7",
    "@types/react-dom": "~19.2.3",
    "@types/supertest": "6.0.3",
    "@types/turndown": "^5.0.6",
    "@types/webpack": "5.28.5",
    "@typescript/native-preview": "7.0.0-dev.20260106.1",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "autoprefixer": "10.4.23",
    "babel-preset-expo": "54.0.9",
    "baseline-browser-mapping": "2.9.11",
    "bun-types": "1.3.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "17.0.0",
    "ignore-loader": "^0.1.2",
    "oxlint": "1.38.0",
    "typescript-eslint": "8.52.0",
    "vite-tsconfig-paths": "6.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.3.5"
}
