{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": ".",
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "next-vibe/*": [
        "./src/packages/next-vibe/*"
      ],
      "next-vibe-ui/*": [
        "./src/packages/next-vibe-ui/web/*"
      ],
      "server-only": [
        "./src/packages/next-vibe/server/utils/server-only.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".tmp",
    ".next",
    "to_migrate/**/*.ts",
    "to_migrate/**/*.tsx",
    "src/packages/next-vibe-ui/native"
  ]
}