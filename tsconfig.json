{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["bun-types"],
    "rootDir": ".",
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,
    "customConditions": ["react-native"],
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "next-vibe/*": ["./src/app/api/[locale]/*"],
      "@next-vibe/checker/oxlint-plugins/*": [
        "./src/app/api/[locale]/system/check/oxlint/plugins/*/src/index"
      ],
      "@next-vibe/checker/*": ["./src/app/api/[locale]/*"],
      "next-vibe-ui/*": ["./src/packages/next-vibe-ui/web/*"],
      "server-only": [
        "./src/app/api/[locale]/system/unified-interface/shared/server-only/server-only.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "nativewind-env.d.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    ".tmp",
    ".next",
    "to_migrate/**/*.ts",
    "to_migrate/**/*.tsx",
    "**/test-project/**",
    "**/test-files/**"
  ]
  // "extends": "expo/tsconfig.base"
}
