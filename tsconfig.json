{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": ".",
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "next-vibe/*": [
        "./src/app/api/[locale]/v1/core/*"
      ],
      "next-vibe-ui/*": [
        "./src/packages/next-vibe-ui/web/*"
      ],
      "server-only": [
        "./src/app/api/[locale]/v1/core/system/unified-interface/shared/server-only/server-only.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "src/app/api/[locale]/v1/core/system/unified-interface/cli/vibe/types/node.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".tmp",
    ".next",
    "to_migrate/**/*.ts",
    "to_migrate/**/*.tsx"
  ],
  "extends": "expo/tsconfig.base"
}